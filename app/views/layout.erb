            <li><a href="/login">Login</a></li>
            <li><a href="/sig1nup">Sign Up</a></li>
        </div>
        <% end %>
          </ul>
    </nav>

      <nav class="navbar">
  <div class="nav">
    <ul class="nav-tabs">
